<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.weather.todayWeather.TodayWeatherFragment"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/loader_main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/loader"
            android:layout_width="@dimen/loader_width_height"
            android:layout_height="@dimen/loader_width_height"
            android:src="@drawable/loader"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/today_weather_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView_condition_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            tools:src="@drawable/clouds_01" />

        <TextView
            android:id="@+id/textView_name_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            tools:text="London"
            android:layout_centerHorizontal="true"
            android:textSize="40dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/imageView_condition_icon"/>


        <TextView
            android:id="@+id/textView_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
            tools:text="25.0°C"
            android:textSize="40dp"
            android:layout_marginLeft="70dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/textView_name_location"/>


        <TextView
            android:id="@+id/textView_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            tools:text="Patchy rain "
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_name_location"
            android:layout_toEndOf="@id/textView_temperature"/>




        <TextView
            android:id="@+id/textView_feels_like_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_below="@+id/textView_temperature"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            tools:text="Feels like 20.4°C"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/textView_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_below="@id/textView_feels_like_temperature"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            tools:text="Wind: SE, 5.3 m/s"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/text_view_clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_below="@id/textView_temperature"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@id/textView_feels_like_temperature"
            tools:text="Clouds: 60 %"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_below="@id/textView_feels_like_temperature"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            tools:text="Humidity: 10 m/s"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"/>

    </RelativeLayout>








</RelativeLayout>